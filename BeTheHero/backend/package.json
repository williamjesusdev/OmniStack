    "mongoose": "^6.2.4",
    "socket.io": "^4.4.1"
  },
  "devDependencies": {
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.2",
    "sucrase": "^3.12.1"
  }
}
